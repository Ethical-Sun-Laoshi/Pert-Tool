extends layout

block content
    nav.navbar.navbar-inverse
        .container-fluid
            .navbar-header
                a.navbar-brand(href='/') Planning Tool
            ul.nav.navbar-nav
                case authenticated
                    when true
                        li.active
                            a(href='/'+user+'/dashboard') Home
                    when false
                        li.active
                            a(href='/') Home

            ul.nav.navbar-nav.navbar-right
                case authenticated
                    when true
                        li
                            a(href='/logout')
                                span.glyphicon.glyphicon-log-out
                                |  Log out
                    when false
                        li
                            a(href='#register')
                                span.glyphicon.glyphicon-user
                                |  Sign Up
                        li
                            a(href='#login')
                                span.glyphicon.glyphicon-log-in
                                |  Login
    .main.container
        case authenticated
            when true
                case projectEdition
                    when true: include activities/activity_list
                    when false: include projects/project_list
            when false: include user/sign