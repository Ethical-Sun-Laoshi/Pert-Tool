signin
    .container
        .row
            .col-sm-6.col-md-4.col-md-offset-4
                .account-wall
                    #my-tab-content.tab-content
                        #register.tab-pane.active
                            p=connectionMessage
                            form.form-signin(action='/register', method='post')
                                input.form-control(type='text' name='newUser' placeholder='Choose an username ...', required=true, autofocus='')
                                input.form-control(type='password' name='newPass' placeholder='Choose your password ...', required=true)
                                input.btn.btn-lg.btn-default.btn-block(type='submit', value='Sign Up')
                            #tab(data-tabs='tab')
                                p.text-center
                                    a(href='#login', data-toggle='tab') Have an Account?
                        #login.tab-pane
                            p=connectionMessage
                            form.form-signin(action='/login', method='post')
                                input.form-control(type='text' name='username' placeholder='Username', required=true, autofocus='')
                                input.form-control(type='password' name='password' placeholder='Password', required=true)
                                input.btn.btn-lg.btn-default.btn-block(type='submit', value='Sign In')
                            #tab(data-tabs='tab')
                                p.text-center
                                    a(href='#register', data-toggle='tab') Need an Account?